<!-- Header -->
<%- include("./../layouts/header") %>
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2>Trang cá nhân </h2>
          <div class="bt-option">
            <a href="/">Danh sách đặt phòng</a>
            <span class="text-warning"><%= user.fullName %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb Section End -->


<!-- Rooms Section Begin -->
<section class="rooms-section spad">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-xs-12">
        <div class="list-group mt-5">
          <a href="/profile" class="list-group-item list-group-item-action active">
            Thông tin tài khoản
          </a>
          <a href="/profile" class="list-group-item list-group-item-action">Thông tin đặt phòng</a>
          <a href="/profile" class="list-group-item list-group-item-action">Thay đổi mật khẩu</a>
          <a href="/my-services" class="list-group-item list-group-item-action">Thêm dịch vụ</a>
          <a href="/my-bills" class="list-group-item list-group-item-action disabled">Hóa đơn chi phí</a>
        </div>
      </div>

      <div class="col-md-8 col-xs-12 ">
        <div class="input-group mb-3 d-flex justify-content-center">
          <div class="">
            <img src="/assets/images/uploads/users/<%=user.avatar %>" class="rounded-circle  " alt="Ảnh đại diện"
              height="100" width="100">
            <button type="button" class="btn btn-outline-warning"> Ảnh đại diện cute quá !!! </button>
          </div>

        </div>

          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Ngày bắt đầu</th>
                <th scope="col">Ngày kết thúc</th>
                <th scope="col">Phòng đặt</th>
                <th scope="col">Số người</th>
                <th scope="col">Trạng thái đặt</th>
                <th scope="col">Giá tiền</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach((booking, index) => { %>
              <tr>
                <th scope="row"><%=index+1 %></th>
                <td> <%= moment(booking.startAt).format('DD-MM-YYYY') %> </td>
                <td> <%= moment(booking.endAt).format('DD-MM-YYYY') %> </td>
                <td>
                  <% booking.roomId.map((item) =>{ %>
                  <span class="bg-success"><%=item.name%></span>
                  <%})%>
                </td>
                

                <td><%=booking.numberCustomer%> người</td>                
                                  
                <% if (booking.status === "wait_confirm") { %>
                <td><span class="bg-warning">Chờ xác nhận</span></td>
                <% }else if (booking.status === "wait_check_in"){ %>
                <td><span class="bg-info">Chờ nhận phòng</span></td>
                <% }
                                    else if (booking.status === "check_in"){ %>
                <td><span class="bg-success">Đã nhận phòng</span></td>
                <% }
                                    else if (booking.status === "fail"){ %>
                <td><span class="bg-danger">Huỷ phòng</span></td>
                <% }
                                    else { %>
                <td><span class="bg-success">Thành công</span></td>
                
                <% } %>
                <td> <span class="bg-info"><%=formatPrice(booking.price) %> đ</span></td>
              </tr>    
              <% }) %>
            </tbody>
          </table>
          <div class="col-lg-12 d-flex justify-content-center ">
            <div class="col-lg-12">
              <div class="room-pagination">
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">Next <i class="fa fa-long-arrow-right"></i></a>
              </div>
            </div>
      
          
          </div>
      </div>
    </div>
  </div>
</section>


<!-- Rooms Section End -->
<%- include("./../layouts/footer") %>
