<script>
  /*get Cookie */
    function getCookie(cname) {
      var name = cname + "=";
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(';');
      for (var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
        }
      }
      return "";
    }
    /*set Cookie */
    function setCookie(cname, cvalue, exdays) {
      var d = new Date();
      d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
      var expires = "expires=" + d.toUTCString();
      document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }
    $(":input").bind('keyup mouseup', function () {
       var Services = $('.quantity').map((_, el) => {
        return {
          quantity: el.value,
          servicesId: $(el).attr("data-id"),
          price: $(el).attr("data-price")
        }
      }).get()
        arrServices = Services.filter(function (item) {
        return item.quantity !== "0"
      })
      setCookie('arrServices', JSON.stringify(arrServices), 1);
    })
    function sendServices(){
       let arrServices = $.parseJSON(getCookie("arrServices"));
       $.ajax({
        url: "/my-services",
        method: "POST",
        data: {
          arrServices: arrServices,
        }
      }).then(function (data) {
        alertify.success(data.message)
        setCookie("arrServices", "", 0)
        window.timeout = setTimeout(function () {
          window.location.href = "/my-bills";
        }, 2000)
      }).catch(function (err) {
        alertify.error(err.responseJSON.message);
      })
   
    }
   


</script>
