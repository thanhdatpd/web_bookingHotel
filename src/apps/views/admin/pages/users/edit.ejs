<%- include("../../layouts/head.ejs") %>

<body>
  <%- include("../../layouts/header.ejs") %>
  <%- include("../../layouts/leftMenu.ejs") %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><a href="">Quản lý thành viên</a></li>
      <li class="active"><%=user.fullName %></li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Thành viên: <%=user.fullName %> </h1>
    </div>
  </div>
  <!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-8">
            <form id="form-edit-user">
              <div class="form-group">
                <input type="hidden"  id="id"  name="id" required value="<%=user._id %>" class="form-control">
              </div>
              <div class="form-group">
                <label>Email</label>
                <input id="email" type="text" name="email" required value="<%=user.email %>" class="form-control">
              </div>
              <div class="form-group">
                <label>Họ & Tên</label>
                <input id="fullName" type="text" name="fullName" required class="form-control" value="<%=user.fullName %>" placeholder="">
              </div>
              <div class="form-group">
                <label>Số điện thoại</label>
                <input id="phoneNumber" type="number" name="phoneNumber" required class="form-control" value="<%=user.phoneNumber %>" placeholder="">
              </div>
              <div class="form-group">
                <label>Mật khẩu</label>
                <input id="password" type="hidden" type="password" name="password" required class="form-control" value="<%=user.password %>"
                  placeholder="">
              </div>
              <button id="btn-edit-user" type="button" class="btn btn-success">Cập nhật </button>
              <button type="reset" class="btn btn-default">Làm mới</button>
          </div>
          </form>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->
</body>
</div>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery-validation-1.19.2/dist/jquery.validate.js"></script>
<script>
    $("#btn-edit-user").click(function () {
      var email = $("#email").val();
      var password = $("#password").val();
      var phoneNumber = $("#phoneNumber").val();
      var fullName = $("#fullName").val();
      var id = $("#id").val();
        $.ajax({
          url: `/admin/user-edit/${id}`,
          method: "PUT",
          data: {
            id: id,
            email: email,
            password: password,
            phoneNumber: phoneNumber,
            fullName: fullName,
          }
        }).then(function (data) {
          alertify.success(data.message);
          window.timeout = setTimeout(function () {
            window.location.href = "/admin/users";
          }, 2000)
        }).catch(function (err) {
          alertify.error(err.responseJSON.message);
        })
      })
</script>
