<%- include("../../layouts/head.ejs") %>

<body>
  <%- include("../../layouts/header.ejs") %>
  <%- include("../../layouts/leftMenu.ejs") %>
  <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home">
              <use xlink:href="#stroked-home"></use>
            </svg></a></li>
        <li class="active">Dịch vụ</li>
      </ol>
    </div>
    <!--/.row-->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header text-center">Danh sách dịch vụ</h1>
      </div>
    </div>
    <!--/.row-->
    <div id="toolbar" class="btn-group">
      <a href="/admin/services/add" class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i> Thêm dịch vụ
      </a>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <table data-toolbar="#toolbar" data-toggle="table">

              <thead>
                <tr>
                  <th data-field="id" data-sortable="true">ID</th>
                  <th data-field="name" data-sortable="true">Tên dịch vụ</th>
                  <th data-field="price" data-sortable="true">Giá</th>
                  <th>Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% services.forEach((service, index) => { %>
                <tr>
                  <td style=""> <%=index+1 %> </td>
                  <td style=""><%=service.name %></td>
                  <td style=""><%=service.price%> VNĐ</td>
    
                  <td class="form-group">
                    <a href="/admin/services-edit/<%=service._id%>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/admin/services-delete/<%=service._id%>"
                      onclick="return confirm('Bạn chắc chắn muốn xoá tài khoản <%=services.name%> chứ ?')" class="btn btn-danger"><i
                        class="glyphicon glyphicon-remove"></i></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer" style='display: flex; justify-content: center;'>
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <nav aria-label="Page navigation example">
                  <ul class="pagination">
                    <% if (page > 1) { %>
                    <li class="page-item ">
                      <a class="page-link" href="/admin/services?page=<%= page - 1 %>"> Prev </a>
                    </li>
                    <% } %>
                    <% range.map((i) => { %>
                    <li class="page-item <%= page === i ? "active" : "" %>">

                      <% if (i === "...") { %>

                      <span> <%= i %> </span>

                      <% } else { %>

                      <a class="page-link" href="/admin/services?page=<%= i %>"><%= i %></a>
                      <% } %>
                    </li>
                    <% }) %>
                    <% if (page < totalPages) { %>
                    <li class="page-item ">
                      <a class="page-link" href="/admin/services?page=<%= page + 1 %>"> Next </a>
                    </li>
                    <% } %>

                  </ul>
                </nav>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!--/.row-->
  </div>
  <!--/.main-->
</body>
<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/bootstrap-table.js"></script>

</html>
