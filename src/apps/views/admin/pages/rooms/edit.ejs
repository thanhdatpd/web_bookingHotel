<%- include("../../layouts/head") %>

<body id="page-top">
  <%- include("../../layouts/sidebar") %>
  <%- include("../../layouts/header") %>
  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-center mb-4">
      <h1 class=" h3 mb-0 text-gray-800  ">Cập nhật phòng : <%=room.name %></h1>
    </div>
    <!-- Content Row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <form  method="post" enctype="multipart/form-data" id="form-edit-room">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Tên phòng</label>
                    <input id="name" name="name" class="form-control" placeholder="" value="<%=room.name %>"/>
                  </div>

                  <div class="form-group">
                    <label> Kích cỡ </label>
                    <input id="size" name="size" type="number" min="0" class="form-control" value="<%=room.size %>"/>
                  </div>
                  <div class="form-group">
                    <label> Kiểu phòng </label>
                    <select id="type" name="type" class="form-control">
                      <option value="single" selected="">Phòng Đơn</option>
                      <option value="double">Phòng Đôi</option>
                      <option value="vip">Phòng VIP</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Dịch vụ</label>
                    <textarea id="services" name="services" class="form-control" rows="3"><%=room.services %></textarea>
                  </div>
                  <div class="form-group">
                    <label>Mô tả phòng</label>
                    <textarea id="description" name="description" class="form-control" rows="3"><%=room.description %></textarea>
                  </div>
                  <div class="form-group">
                    <label>Giá phòng</label>
                    <input id="price" name="price" type="number" min="0" class="form-control" value="<%=room.price %>" />
                  </div>

                </div>
                <div class="col-md-6 pt-2">
                  <div class="form-group">
                    <label>Ảnh phòng</label>
                    <input id="image" name="image" type="file" />
                    <br />
                    <div>
                      <img width="150" height="150" id="img_pview" src="/assets/images/uploads/rooms/default.jpeg" />
                    </div>
                  </div>
                  <button id="btn-edit-room" name="btn-edit-room" type="submit" class="btn btn-success">
                    Cập nhật
                  </button>
                  <button type="reset" class="btn btn-default">Làm mới</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- /.col-->
    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->
  <!-- Footer -->
  <%- include("../../layouts/footer") %>
  <!-- End of Footer -->
</body>
<script>
  $(document).ready(function () {
    const prd_image = $("#image");
    prd_image.on("change", function (e) {
      const file = e.target.files[0];
      const reader = new FileReader();
      reader.onload = function (event) {
        $("#img_pview").attr("src", event.target.result);
      };
      if (file) {
        reader.readAsDataURL(file);
      }
    });
    $("#btn-edit-room").click(function () {
        alertify.success(" Cập nhật phòng thành công")
        window.timeout = setTimeout(function () {
        window.location.href = "/admin/rooms";
      }, 2000)

    
    })
  })

</script>

</html>
