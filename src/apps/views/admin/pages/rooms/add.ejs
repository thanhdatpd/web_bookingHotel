<%- include("../../layouts/head.ejs") %>

<body>
  <%- include("../../layouts/header.ejs") %>
  <%- include("../../layouts/leftMenu.ejs") %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="#"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a>
      </li>
      <li><a href="">Quản lý phòng </a></li>
      <li class="active">Thêm phòng </li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Thêm phòng </h1>
    </div>
  </div>
  <!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <form action="/admin/rooms/add" method="post" enctype="multipart/form-data">
            <div class="col-md-6">
              <div class="form-group">
                <label>Tên phòng</label>
                <input required="" name="name" class="form-control" placeholder="" />
              </div>

              <div class="form-group">
                <label> Kích cỡ </label>
                <input required="" name="size" type="number" min="0" class="form-control" />
              </div>
              <div class="form-group">
                <label> Kiểu phòng </label>
                <select name="type" class="form-control">
                  <option value="single" selected="">Phòng Đơn</option>
                  <option value="double">Phòng Đôi</option>
                  <option value="vip">Phòng VIP</option>
                </select>
              </div>
              <div class="form-group">
                <label>Dịch vụ</label>
                <textarea required="" name="services" class="form-control" rows="3"></textarea>
              </div>
              <div class="form-group">
                <label>Mô tả phòng</label>
                <textarea required="" name="description" class="form-control" rows="3"></textarea>
              </div>
              <div class="form-group">
                <label>Giá phòng</label>
                <input required="" name="price" type="number" min="0" class="form-control" />
              </div>
             
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Ảnh phòng</label>
                <input id="image" required="" name="image" type="file" />
                <br />
                <div>
                  <img width="150" height="150" id="img_pview" src="/assets/images/uploads/rooms/default.jpeg" />
                </div>
              </div>
              <button onclick="alert('Thêm thành công')" name="btn-add-room" type="submit" class="btn btn-success">
                Thêm mới
              </button>
              <button type="reset" class="btn btn-default">Làm mới</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- /.col-->
  </div>
  <!-- /.row -->
</div>


</body>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery-validation-1.19.2/vali/jquery.validate.js"></script>
<script>
  $(document).ready(function () {
    const prd_image = $("#image");

    prd_image.on("change", function (e) {
      const file = e.target.files[0];
      const reader = new FileReader();
      reader.onload = function (event) {
        $("#img_pview").attr("src", event.target.result);
      };
      if (file) {
        reader.readAsDataURL(file);
      }
    });
  });
</script>
